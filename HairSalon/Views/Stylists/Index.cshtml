@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;
<h1>Stylists</h1>
<hr />

@if (@Model.Count == 0)
{
<h3>The stylist list is empty!</h3>
}

@foreach (Stylist stylist in Model)
{
<ul>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</ul>
}

<hr />
<p>@Html.ActionLink("Add New Stylist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
