@{
  Layout = "_Layout";
}
@* @model HairSalon.Models.Appointment *@
@using HairSalon.Models;
@model List<HairSalon.Models.Appointment>
<h2>Appointment Overview</h2>
<hr>

@if (@Model.Count == 0)
{
  <h3>No appointments have been added yet!</h3>
}

@foreach (Appointment newAppointment in Model)
{
    <h3>@Html.ActionLink($"{newAppointment.DateTime}", "Details", new { id = newAppointment.DateTime}, new { id = newAppointment.AppointmentId }) | Stylist: @Html.ActionLink($"{newAppointment.Stylist.StylistName}", "Details", "Stylists", new { id = newAppointment.StylistId })</h3>
}

<hr />
<h4>@Html.ActionLink("Make Appointment", "Create")</h4>
<h4>@Html.ActionLink("Delete All Appointments", "DeleteAll")</h4>
<h4>@Html.ActionLink("Home", "Index", "Home")</h4>
