@{
  Layout = "_Layout";
}
@model HairSalon.Models.Client
<h2>Edit Client</h2>
<hr />

<h4>Edit: @Html.DisplayFor(model => model.ClientFullName)</h4>
<br>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ClientId)

    @Html.LabelFor(model => model.ClientFullName)
    @Html.EditorFor(model => model.ClientFullName)

    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")

    <input type="submit" value="Save" />
}
<hr />
<p>@Html.ActionLink("Back Clients", "Index")</p>
